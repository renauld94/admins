[Unit]
Description=Epic Cinematic Neural-to-Cosmic Animation Agent
Documentation=https://www.simondatalab.de
After=network.target

[Service]
Type=simple
User=simonadmin
Group=simonadmin
WorkingDirectory=/home/simon/Learning-Management-System-Academy
ExecStart=/usr/bin/python3 /home/simon/Learning-Management-System-Academy/.continue/agents/epic_cinematic_agent.py
Restart=on-failure
RestartSec=60
StandardOutput=journal
StandardError=journal
SyslogIdentifier=epic-cinematic-agent

# Security
NoNewPrivileges=true
PrivateTmp=true

# Resource limits
MemoryMax=1G
CPUQuota=50%

[Install]
WantedBy=multi-user.target
