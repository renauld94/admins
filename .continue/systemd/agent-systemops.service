[Unit]
Description=Agent: systemops (runs the SystemOps FastAPI agent)
After=network-online.target

[Service]
Type=simple
WorkingDirectory=/home/simon/Learning-Management-System-Academy
ExecStartPre=/usr/bin/env bash -c 'mkdir -p /home/simon/.local/state/agents'
StandardOutput=append:/home/simon/.local/state/agents/systemops.log
StandardError=inherit
ExecStart=/usr/bin/env python3 /home/simon/Learning-Management-System-Academy/.continue/agents/agents_continue/systemops_server.py
Restart=on-failure
RestartSec=5

[Install]
WantedBy=default.target
