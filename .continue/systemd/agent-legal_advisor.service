[Unit]
Description=Agent: legal_advisor (runs the Legal Advisor FastAPI agent)
After=network-online.target

[Service]
Type=simple
WorkingDirectory=/home/simon/Learning-Management-System-Academy
ExecStartPre=/usr/bin/env bash -c 'mkdir -p /home/simon/.local/state/agents'
StandardOutput=append:/home/simon/.local/state/agents/legal_advisor.log
StandardError=inherit
ExecStart=/usr/bin/env python3 /home/simon/Learning-Management-System-Academy/.continue/agents/agents_continue/legal_advisor_server.py
Restart=on-failure
RestartSec=5

[Install]
WantedBy=default.target
