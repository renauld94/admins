# Example environment variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# OpenAI API (for GPT-4 cover letters)
OPENAI_API_KEY=sk-your-api-key-here

# Ollama (local LLM alternative)
OLLAMA_URL=http://localhost:11434

# LinkedIn credentials (use with caution!)
LINKEDIN_EMAIL=your-email@example.com
LINKEDIN_PASSWORD=your-secure-password

# Email automation (optional)
SENDGRID_API_KEY=your-sendgrid-api-key

# Database
DATABASE_PATH=data/applications.db

# Output directories
OUTPUT_DIR=outputs
RESUME_DIR=outputs/resumes
COVER_LETTER_DIR=outputs/cover_letters
INTERVIEW_NOTES_DIR=outputs/interview_notes
REPORTS_DIR=outputs/reports
