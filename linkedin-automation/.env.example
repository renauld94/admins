# Environment Variables for LinkedIn Automation Toolkit
# Copy this file to .env and fill in your credentials

# ===== REQUIRED: LinkedIn Credentials =====
LINKEDIN_EMAIL=your_email@example.com
LINKEDIN_PASSWORD=your_secure_password

# ===== Company Page =====
COMPANY_PAGE_ID=105307318
COMPANY_PAGE_URL=https://www.linkedin.com/company/105307318

# ===== Moodle Integration (Optional) =====
MOODLE_URL=https://moodle.simondatalab.de
MOODLE_TOKEN=your_moodle_webservice_token_here

# ===== OpenAI API (for AI-generated content) =====
OPENAI_API_KEY=sk-your-api-key-here

# ===== Job Board API Keys (optional) =====
INDEED_API_KEY=
GLASSDOOR_API_KEY=

# ===== Database =====
DATABASE_URL=sqlite:///data/applications.db

# ===== Encryption Key =====
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key-here

# ===== Portfolio =====
PORTFOLIO_URL=https://www.simondatalab.de/
RESUME_PATH=../portfolio-deployment-enhanced/assets/resume/simon-renauld-resume.pdf

# ===== Application Tracking =====
