BROWSER_TIMEOUT_SECONDS=30

# ===== Posting Schedule =====
MAX_POSTS_PER_DAY=3
MAX_POSTS_PER_WEEK=10
MIN_HOURS_BETWEEN_POSTS=4

# ===== Analytics =====
ANALYTICS_SCRAPE_DAYS=30
ANALYTICS_RETENTION_DAYS=365
