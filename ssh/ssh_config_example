# Example SSH config for using a jump host to reach an internal server.
# Copy this into ~/.ssh/config (append) and adjust paths/users as needed.

Host jump
    HostName 136.243.155.166
    User root
    Port 2222
    # IdentityFile ~/.ssh/id_rsa_jump

Host internal
    HostName 10.0.0.104
    User simonadmin
    ProxyJump jump
    # IdentityFile ~/.ssh/id_rsa_internal
    # ForwardAgent yes

# Shortcut to connect via ProxyJump directly without adding hosts separately
Host simon-via-jump
    HostName 10.0.0.104
    User simonadmin
    ProxyJump root@136.243.155.166:2222
    # IdentityFile ~/.ssh/id_rsa_internal
